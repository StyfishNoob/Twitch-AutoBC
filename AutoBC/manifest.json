{
  "manifest_version":2,
  "name":"Twitch Auto BonusChest",
  "version":"1.8",
  "description":"自動でボーナスチェストをクリックする拡張機能です。",

  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },

  "permissions": ["tabs","storage"],

  "content_scripts":[
    {
      "matches":["https://www.twitch.tv/*"],
      "js":["contentScript.js"]
    }
  ],

 "browser_action": {
   "default_popup": "popup/popup.html",
   "default_title": "ボーナスチェストを自動でクリック！"
 },

 "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
